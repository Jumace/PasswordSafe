{% extends 'base.html.twig' %}
{% block title %}Settings{% endblock %}

{% block  main %}
<form action="" method="post">
  <div class="mdc-card mdc-card--content">
    <h2 class="<h2 class="mdc-typography--headline6">Change your password</h2>
    <div>{% include '_elements/textfield.html.twig' with {'name': 'oldpassword', 'label': 'Old Password', type: 'password', 'value': ''} %}</div>
    <div>{% include '_elements/textfield.html.twig' with {'name': 'password', 'label': 'New Password', type: 'password', 'value': ''} %}</div>
    <div>{% include '_elements/textfield.html.twig' with {'name': 'password2', 'label': 'Retype your Password', type: 'password', 'value': ''} %}</div>
