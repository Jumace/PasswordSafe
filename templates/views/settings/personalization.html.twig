{% extends 'PasswordSafeBundle:_tpl:standardSkeleton.html.twig' %}
{% set hideMenu = true %}
{% set title = 'Settings' %}

{% block content %}
<form action="" method="post">
  <div class="card-wide mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Personalization</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <label>Start Category</label>

      <select name="startCategory">
        <option value="">Main category</option>
      {% for categoryItem in categories %}
        {% if meta.map.startCategory is defined and meta.map.startCategory == categoryItem %}
          <option selected>{{categoryItem}}</option>
        {% else %}
          <option>{{categoryItem}}</option>
        {% endif %}
      {% endfor %}
      </select>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a href="{{path('settings')}}" class="mdl-button mdl-js-button mdl-button--primary">Back</a>
      <input type="hidden" name="csrf_token" value="{{csrf_token}}" />
      <input type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" value="Save" />
    </div>
  </div>
{% endblock %}
