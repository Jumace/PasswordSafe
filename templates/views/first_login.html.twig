{% extends 'PasswordSafeBundle:_tpl:baseSkeleton.html.twig' %}

{% block title %}PasswordSafe{% endblock %}

{% block body %}
  <div class="login">
    <div class="header">
      <h1 class="logo">Password<span>Safe</span></h1>
    </div>
    <div class="mdl-card mdl-shadow--8dp">
      <div class="mdl-card__title mdl-card--border">
        <h2 class="mdl-card__title-text">Login</h2>
      </div>
      <div class="mdl-card__supporting-text">
        <p>Dein Username lautet: <b>{{username}}</b></p>
        <p>Dein Passwort lautet: <b>{{password}}</b></p>

        <p>We enabled multi-factor authentication for you to enhance your security. Scan this image with your token generator, e.g. Google Authenticator</p>
        <div class="qrCode">
          {{qrCode|raw}}
        </div>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a href="{{path('login')}}" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">Continue</a>
      </div>
    </div>
  </div>
{% endblock %}
